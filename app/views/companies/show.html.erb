<main>
  <div class="modal-body row">
    <div class="col-md-6">
      <h1>Jobs for <%= @company.name %></h1>
      <% @company.jobs.each do |job| %>
      <ul><%= job.title %></ul>
      <% end %>
    </div>
    <div class="col-md-6">
      <h1>Contacts</h1>
      <%= render partial:"contactform" %>
      <div class="row">
        <% @company.contacts.each do |contact| %>
        <div class="card w-25">
          <%= image_tag("portrait_for_contact.png", alt: "portrait", class: 'card-img-top rounded-circle img-thumbnail') %>
          <div class="card-body">
            <h5><%= contact.full_name %></h5>
            <p><%= contact.position %></p>
            <p><%= contact.email %></p>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
