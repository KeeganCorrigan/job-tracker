<main>
  <div class="modal-body row">
    <div class="col-md-5">
      <h1 class="company-head">Jobs for <%= @company.name %></h1>
      <% @company.jobs.each do |job| %>
      <ul><%= link_to job.title, job_path(job) %></ul>
      <% end %>
    </div>
    
    <div class="col-md-7">
      <h1 class="company-head">Contacts</h1>
      <%= render partial:"contactform" %>
      <div class="row">
        <% @company.contacts.each do |contact| %>
        <div class="card w-25 align-items-center">
          <%= image_tag("portrait_for_contact.png", alt: "portrait", class: 'card-img-top img-thumbnail w-75') %>
          <div class="card-body w-75 card-body-reset">
            <h5 class="contact-card-heading"><%= contact.full_name %></h5>
            <p class="card-text"><%= contact.position %></p>
            <p class="card-text"><%= contact.email %></p>

            <div class="row">
              <div class="col-sm-12">
                <%= link_to edit_contact_path(contact) do %>
                  <i class="far fa-edit" id="edit-contact"><span class="hidden">edit</span></i>
                <% end %>
                <%= link_to company_contact_path(contact), method: "delete" do %>
                <i class="far fa-trash-alt"><span class="hidden">delete</span></i>
                <% end %>
              </div>
            </div>

          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
