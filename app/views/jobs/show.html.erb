<main>
  <h1><%= @job.title %> at <%= link_to @job.company.name, company_path(@job.company) %></h2>

  <div class="row">
    <div class="col-sm-2">
      <%= link_to edit_job_path(@job) do %>
        <i class="far fa-edit" id="edit-<%= @job.id%>"><span class="hidden">edit</span></i>
      <% end %>
      <%= link_to job_path(@job), method: "delete" do %>
      <i class="far fa-trash-alt"><span class="hidden">delete</span></i>
      <% end %>
    </div>
  </div>

  <h5>Description:</h5>
  <p><%= @job.description %></p>

  <h5>Level of Interest:</h5>
  <p><%= @job.level_of_interest %></p>

  <h5>City:</h5>
  <p><%= @job.city %></p>

  <%= render partial:'commentform' %>

</main>
