<head>
  <link href="https://fonts.googleapis.com/css?family=Dosis:800|Fredoka+One|Yantramanav:300" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
</head>

<div id="snackbar">Did you think this went somewhere?</div>

<script type="text/javascript"></script>
<%= javascript_tag do -%>
function myFunction() {
    var x = document.getElementById("snackbar");
    x.className = "show";
    setTimeout(function(){ x.className = x.className.replace("show", ""); }, 3000);
}
<% end %>

<script type="text/javascript"></script>
<%= javascript_tag do -%>
  var header = document.getElementById("nav-active");
  var btns = header.getElementsByClassName("nav-item");
  for (var i = 0; i < btns.length; i++) {
    btns[i].addEventListener("click", function() {
      var current = document.getElementsByClassName("active");
      current[0].className = current[0].className.replace(" active", "");
      this.className += " active";
    });
  }
<% end %>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#" onclick="myFunction()">jobTRACKER</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse navbar-right-override" id="navbarNavAltMarkup">
    <div class="navbar-nav" id="nav-active">
      <a class="nav-item nav-link" href="/jobs">Jobs <span class="sr-only">(current)</span></a>
      <a class="nav-item nav-link" href="/companies">Companies</a>
      <a class="nav-item nav-link" href="/categories">Categories</a>
      <a class="nav-item nav-link" href="/dashboard">Dashboard</a>
    </div>
  </div>
</nav>
